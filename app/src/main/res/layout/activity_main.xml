<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.MainActivity">

    <!-- Button to initiate barcode scanning -->

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewTop"
        android:layout_marginTop="69dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Welcome to Boycott_Food \nPlease, check the product before purchasing"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="@drawable/scan_shape"
        android:text="Scan"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/keffiyeh"
    android:scaleType="centerCrop" />


</RelativeLayout>

